@using UserStatisticsGenerator.Models
@{
    ViewBag.Title = "UserStatistics";
    Layout = null;
}

<style>
    .userStatistics {
       
    }

    .userStatistics h2{
        font-size: 21px;
        font-weight: normal;
         padding-left: 15px;
    }

    .userStatistics h2{
        clear:both;
    }

    .userStatistics ul {
        background-color: rgb(65, 99, 149);
        padding-top: 10px;
        padding-left: 0px;
    }

    .userStatistics li{
        list-style-type: none;
        padding: 0px;
        margin: 0;
     
        color: white;
        font-weight: bold;
        font-size: 0.9em;
        height: 40px;
        width: 100%;
        clear: both;
    }

    .userStatistics .rel_profile {
        float: left;
             padding-left: 15px;
               font-weight: normal;
    }

    .userStatistics .rel_profile img {
        max-width: 60px;
        max-height: 60px;
    }

    .userStatistics .votePanel {
        float: right;
        padding-top: 20px;
    }

    .userStatistics .rel_caption {
        font-weight: normal;
        font-size: 0.85em;
    }

    .userStatistics .post {
        display: inline-block;
        vertical-align: top;
        padding-left: 15px;
        max-width: 390px;
        overflow: hidden;
        text-align: center;
        font-weight: normal;
        visibility: visible;
    }

     .userStatistics li.d1 {
        background-color: rgb(102,129,169);
      
}
     .userStatistics li.d0 {
        background-color: rgb(65,99,143);
         
     
}
</style>
<div class="userStatistics">
    <h2>@ViewData["section"]</h2>
    <ul>
        @{
            var activity = ViewData["stats"] as ActivityResult;
            <li class="d0">
                <div class="post">
              
                    You made @activity.TotalLike Likes in Last 2 Weeks  </div>
                  <div>
              
            
              
                @{ var voteId = "FacebookStats" + "_" + "Last2WeeksLikes";}
             
                <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbDown(event)" src="../images/icon_down.png">
                
                <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbUp(event)" src="../images/icon_up.png">
                <span style="float: right; font-weight: normal;">  Is this usefull? </span> </div>
            </li>

              <li class="d1">
                <div class="post">
             
                    You made @activity.TotalShares Shares in Last 2 Weeks  </div>  <div>
              
               
                @{ voteId = "FacebookStats" + "_" + "Last2WeeksShares";}
              <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbDown(event)" src="../images/icon_down.png">
                
                <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbUp(event)" src="../images/icon_up.png">
                <span style="float: right; font-weight: normal;">  Is this usefull? </span>  </div>
              
            </li>

               <li class="d0">
                 <div class="post">
             
                    You made @activity.TotalStatusUpdates Status Updates in Last 2 Weeks  </div>  <div>
              
               
                @{ voteId = "FacebookStats" + "_" + "Last2WeeksStatusUpdates";}
               <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbDown(event)" src="../images/icon_down.png">
                
                <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbUp(event)" src="../images/icon_up.png">
                <span style="float: right; font-weight: normal;"> Is this usefull? </span> </div>
              
            </li>

             <li class="d1">
                <div class="post">
             
                     Engagement made to others @activity.EngagementMadeToOthers</div>  <div>
              
               
                @{ voteId = "FacebookStats" + "_" + "EngagementMadeToOthers";}
              <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbDown(event)" src="../images/icon_down.png">
                
                <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbUp(event)" src="../images/icon_up.png">
                <span style="float: right; font-weight: normal;">  Is this usefull? </span> </div>
              
            </li>

            <li class="d0">
                <div class="post">
             
                    Engagement got from others @activity.EngagementFromOthers  </div> <div>
              
               
                @{ voteId = "FacebookStats" + "_" + "EngagementFromOthers";}
                <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbDown(event)" src="../images/icon_down.png">
                
                <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbUp(event)" src="../images/icon_up.png">
                <span style="float: right; font-weight: normal;"> Is this usefull? </span> </div>
              
            </li>
            
              <li class="d1">
                <div class="post">
                @{
                    var engIn = ((double)activity.EngagementFromOthers / (activity.EngagementMadeToOthers + activity.EngagementFromOthers)) * 100.0;
                    var engOut = ((double)activity.EngagementMadeToOthers / (activity.EngagementMadeToOthers + activity.EngagementFromOthers)) * 100.0;     
                 }Engagement Received/Engagement Made: @Math.Round(engIn) % / @Math.Round(engOut) % </div>  <div>
              
               
                @{ voteId = "FacebookStats" + "_" + "EngagementMadeToOthers";}
              <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbDown(event)" src="../images/icon_down.png">
                
                <img class="vote" data="@voteId" onclick="UserStatisticsJs.ThumbUp(event)" src="../images/icon_up.png">
                <span style="float: right; font-weight: normal;">  Is this usefull? </span> </div>
              
            </li>
        }
    </ul>
</div>


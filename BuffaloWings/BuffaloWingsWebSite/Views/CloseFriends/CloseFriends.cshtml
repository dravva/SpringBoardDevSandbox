@{
    ViewBag.Title = "CloseFriends";
    Layout = null;
}

<style>
    .close_friends {

    }

    .close_friends h2{
        font-size: 21px;
        font-weight: normal;
    }

    .close_friends h2{
        clear:both;
    }

    .close_friends ul {
        background-color: rgb(65, 99, 149);
        padding-top: 10px;
        padding-left: 10px;
    }

    .close_friends li{
        list-style-type: none;
        padding: 0;
        margin: 0;
        margin-bottom: 10px;

        color: white;
        font-weight: bold;
        font-size: 0.9em;
        height: 80px;
        width: 100%;
        clear: both;
    }

    .close_friends .rel_profile {
        float: left;
    }

    .close_friends .rel_profile img {
        max-width: 60px;
        max-height: 60px;
    }

    .close_friends .votePanel {
        float: right;
        padding-top: 20px;
    }

    .close_friends .rel_caption {
        font-weight: normal;
        font-size: 0.85em;
    }

    .close_friends .rel_name {
        display: inline-block;
        vertical-align: top;
        padding-left: 5px;
        max-width: 180px;
        overflow: hidden;
    }
</style>
<div class="close_friends">
    <h2>@ViewData["category"]</h2>
    <ul>
        @foreach (var relation in ViewData["relations"] as List<Microsoft.Dldw.BuffaloWings.SocialRelation.SocialRelationship>)
        {
            <li>
                <div class="rel_profile">
                    <img src="@relation.With.Picture"/>
                    <div class="rel_name">
                        <div>@relation.With.FullName</div>
                        @if (relation.Caption != "")
                        {
                            <div class="rel_caption">@relation.Caption</div>
                        }
                    </div>                    
                </div>
                @{ var voteId = ViewData["category"] + "_" + relation.With.Id;}
                <div class="votePanel" data="@voteId"><img class="vote" onclick="DldwData.ThumbDown(event)" src="../images/icon_down.png"> <img class="vote" onclick="DldwData.ThumbUp(event)" src="../images/icon_up.png"></div>
            </li>
        }
    </ul>
</div>

